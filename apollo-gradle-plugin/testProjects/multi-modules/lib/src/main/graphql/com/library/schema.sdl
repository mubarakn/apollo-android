enum Class {
  MAMMAL
  FISH
  BIRD
  INSECT
}

interface Animal {
  class: Class!
}

type Cat implements Animal {
  class: Class!
  mustaches: Int!
}

type Plant {
  name: String!
  picture(size: Int!): String!
}

type Query {
  randomAnimal: Animal!

  randomPlant: Plant!

  animal(class: Class!): Animal!
}

input AnimalInput {
  class: Class!
  name: String!
}

type Mutation {
  registerAnimal(input: AnimalInput!): Boolean!
}


